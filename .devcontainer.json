{
  "image": "rocker/binder:4.3",
  //"image": "ghcr.io/rocker-org/devcontainer/r-ver:4",
  "settings": {
    "extensions.ignoreRecommendations": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.rebaseWhenSync": true,
    "files.exclude": {
      ".devcontainer.json": true
    }
  },
  "features": {
    //"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
    //  "packages": "languageserver"
    //},
    "ghcr.io/rocker-org/devcontainer-features/rstudio-server": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:latest": {
      "installTinyTex": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "reditorsupport.r",
        "ms-toolsai.jupyter",
        "jaydesl.vscode-r-arrow"
      ]
    }
  },
  "postAttachCommand": {
        "rstudio-start": "sudo -u rstudio /usr/lib/rstudio-server/bin/rserver --www-port 8787 --server-daemonize 0"
    },
    "forwardPorts": [
        8787
    ],
    "portsAttributes": {
        "8787": {
            "label": "RStudio IDE"
        }
    },
  "postCreateCommand": "apt-get update && export DEBIAN_FRONTEND=noninteractive && apt-get install -y --no-install-recommends rstudio-server && pip install jupyter && R -e 'install.packages(c(\"IRkernel\", \"languageserver\", \"dplyr\", \"data.table\", \"PerformanceAnalytics\", \"dtplyr\", \"ggplot2\"), repos=\"https://cloud.r-project.org/\")' && R -e 'tinytex::install_tinytex()'"
  
}
