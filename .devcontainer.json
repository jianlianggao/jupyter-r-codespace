{
  "image": "ghcr.io/rocker-org/devcontainer/tidyverse:4",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "languageserver"
    },
    "ghcr.io/rocker-org/devcontainer-features/rstudio-server": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:latest": {
      "installTinyTex": "false"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.12"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "reditorsupport.r",
        "ms-toolsai.jupyter",
        "jaydesl.vscode-r-arrow",
        "GitHub.codespaces"
      ]
    }
  },
  "postAttachCommand": {
    "rstudio-start": "rserver"
  },
  "forwardPorts": [8787],
  "portsAttributes": {
    "8787": {
      "label": "RStudio IDE"
    }
  },
  "postCreateCommand": "pip install jupyter && R -e 'install.packages(c(\"IRkernel\", \"languageserver\", \"dplyr\", \"data.table\", \"PerformanceAnalytics\", \"dtplyr\", \"ggplot2\"), repos=\"https://cloud.r-project.org/\")' && R -e 'IRkernel::installspec(user = FALSE)'",
  "remoteEnv": {
    "JUPYTER_PATH": "/usr/local/share/jupyter"
  }
}
