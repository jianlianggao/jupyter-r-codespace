{
  //"image": "rocker/binder:4.3",
  //"image": "rocker/verse:4.3",
  //"image": "ghcr.io/rocker-org/devcontainer/r-ver:4",
  "image": "jupyter/datascience-notebook:latest",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "languageserver"
    },
    "ghcr.io/rocker-org/devcontainer-features/rstudio-server": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:latest": {
      "installTinyTex": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "reditorsupport.r",
        "ms-toolsai.jupyter",
        "jaydesl.vscode-r-arrow",
        "GitHub.codespaces"
      ]
    }
  },
  //"postAttachCommand": {
  //      "rstudio-start": "rserver"
  //  },
    "forwardPorts": [
        8787
    ],
    "portsAttributes": {
        "8787": {
            "label": "RStudio IDE"
        }
    },
  "postCreateCommand": "sudo apt-get update && export DEBIAN_FRONTEND=noninteractive && pip install -y gdebi-core && wget https://download2.rstudio.org/server/jammy/amd64/rstudio-server-2023.12.1-402-amd64.deb && sudo gdebi -n rstudio-server-2023.12.1-402-amd64.deb && sudo rstudio-server start && R -e 'install.packages(c(\"IRkernel\", \"languageserver\", \"dplyr\", \"data.table\", \"PerformanceAnalytics\", \"dtplyr\", \"ggplot2\"), repos=\"https://cloud.r-project.org/\")' && R -e 'tinytex::install_tinytex()' "
  
}
